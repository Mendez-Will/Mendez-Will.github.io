<?xml version="1.0" encoding="utf-8"?>

<!--
    File: smsnotification.xml
    Purpose: Defines the layout for the notification permission screen.
    This layout uses a RelativeLayout to position the title, description,
    and button for granting SMS notification permissions in a vertically
    aligned manner, centered horizontally on the screen.
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title TextView for the permission screen -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Never miss an event!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />
    <!-- Description TextView for the permission prompt -->
    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant permission for SMS notifications!"
        android:textSize="18sp"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <!-- Button for granting notification permissions -->
    <Button
        android:id="@+id/buttonGrantPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant Permission"
        android:layout_below="@id/textViewDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
