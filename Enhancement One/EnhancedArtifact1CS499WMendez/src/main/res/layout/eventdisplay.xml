<?xml version="1.0" encoding="utf-8"?>

<!--
    File: event_item.xml
    Purpose: Defines the layout for a single event item in the event list.
    This layout uses nested LinearLayouts to arrange the event's name, date,
    time, description, and action buttons (Edit and Delete).
    The overall orientation is horizontal, while individual sections are
    stacked vertically for easy readability.
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!-- Container for event details, stacked vertically -->
    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">
        <!-- TextView for displaying the event name -->
        <TextView
            android:id="@+id/textViewEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Horizontal layout for Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Event Date TextView -->
            <TextView
                android:id="@+id/textViewEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <!-- Event Time TextView -->
            <TextView
                android:id="@+id/textViewEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Event Description. This is a sample description that spans over two lines to comfortably fit two sentences."
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <!-- Button for editing the event -->
    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit" />
    <!-- Button for deleting the event -->
    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Delete" />

</LinearLayout>

